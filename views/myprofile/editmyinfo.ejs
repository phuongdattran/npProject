<%- include('../component/head'); %> 
<%- include('../component/navbar'); %>
<%- include('../component/pagetitle'); %>
    <div class="container">
        <div class="row">
            <div class="col s12 m6 offset-m3 l4 offset-l4 addTopMargin">
            <form action="http://localhost:3000/api/user/<%= userInfo._id %>?_method=PUT" method="POST">
                <label for="firstname">Firstname</label>
                <input type="text" name="firstname" class="validate" value="<%= userInfo.firstname %>" required>
                <label for="lastname">Lastname</label>
                <input type="text" name="lastname" class="validate" value="<%= userInfo.lastname %>" required>
                <label for="birthdate">Birthdate</label>
                <input type="text" name="birthdate" class="datepicker validate" value="<%= userInfo.birthdate %>" required>
                <label for="email">Email</label>
                <input type="email" name="email" class="validate" value="<%= userInfo.email %>" required>
                <label>Main sport</label>
                <select name="mainSport" required>
                    <option value="" disabled ></option>
                    <option value="cycling" 
                    <% if( userInfo.mainSport == "cycling") { %>
                        selected
                    <% } %>
                    >Cycling</option>
                    <option value="running"
                    <% if( userInfo.mainSport == "cycling") { %>
                        selected
                    <% } %>
                    >Running</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <button class="waves-effect waves-light btn blue-grey darken-3">Submit</button>
            </form>
        </div>
    </div>
<script src="/js/sign.js" crossorigin="anonymous"></script>
<%- include('../component/footer'); %>