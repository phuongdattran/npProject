<%- include('../component/head'); %>
<div class="blue-grey darken-3 white-text" id="titleBar">
    <a href="/">npProject</a>
</div>
<main class="valign-wrapper" id="titleMain">
    <div class="container">
    <div class="row">
        <div class="col s12 m6 offset-m3 l4 offset-l4">
            <form action="/api/user/<%= userId %>?_method=PUT" method="POST">
                <label for="password">New password</label>
                <input type="password" name="password" class="validate" required>
                <label for="confirmPassword">Confirm new password</label>
                <input type="password" name="confirmPassword" class="validate" required>
        </div>
    </div>
</div>
    <div class="row">
        <div class="col s12">
            <button class="waves-effect waves-light btn blue-grey darken-3">Submit</button>
            </form>
        </div>
    </div>
<script src="/js/sign.js" crossorigin="anonymous"></script>
