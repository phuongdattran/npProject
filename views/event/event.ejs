<%- include('../component/head'); %> 
<%- include('../component/navbar'); %>
<%- include('../component/pagetitle'); %>

<div class="filterContainer">
  <div id="filters">
    <a href="/events?sport=cycling" class="waves-effect waves-light btn blue-grey darken-3"><i class="material-icons">pedal_bike</i></a>
    <a href="/events?sport=running" class="waves-effect waves-light btn blue-grey darken-3"><i class="material-icons">directions_run</i></a>
  </div>
  <form action="/events" id="sortBy" method="GET">
    <select name="sort" onchange="this.form.submit()">
      <option value="" disabled selected>Sort by</option>
      <option value="-_id">New</option>
      <option value="date">Date</option>
      <option value="title">A-Z</option>
    </select>
    <input type="hidden" name="sport" id="sport" value="">
  </form>
</div>

<% for(let i=0; i< events.length; i++) { %>
<div class="row">
  <div class="col s12 m6 l4 offset-m3 offset-l4">
    <a href="/event/<%= events[i]._id %>">
      <div class="card">
        <div class="card-image">
          <img src="/img/<%= events[i].sport %>_event.jpg" />
          <!--<span class="card-title">Event Title</span>-->
          <div class="eventDate">
            <div><%= events[i].meeting.date.split(" ")[0] %></div>
            <div class="eventMonth"><%= events[i].meeting.date.split(" ")[1] %></div>
          </div>
        </div>
        <div class="cardTitle center-align">
          <%= events[i].title %>
        </div>
      </div>
    </a>
  </div>
</div>
<% } %>

<a href="/newevent1" class="btn-floating btn-large waves-effect waves-light blue-grey darken-3" id="addBtn"><i class="material-icons">add</i></a>

<script src="/js/toast.js"></script>
<script src="/js/filter.js"></script>
<%- include('../component/footer'); %>
