<%- include('../component/head'); %>
<%- include('../component/navbar'); %>
<%- include('../component/pagetitle'); %>

<main class="valign-wrapper" id="titleMain">
    <div class="container">
    <div class="row">
        <div class="col s12 m6 offset-m3 l4 offset-l4">
            <form action="/event/edit2/<%= eventDetail._id %>" method="POST">
                <label for="title">Title</label>
                <input type="text" name="title" class="validate" value="<%= eventDetail.title %>" required>
                <label for="type">Type</label>
                <input type="text" name="type" class="validate" value="<%= eventDetail.type %>" required>
                <label for="description">Description</label>
                <input type="text" name="description" class="validate" value="<%= eventDetail.description %>">
                <p><label for="sport">Sport</label></p>
                <select name="sport" required>
                    <option value="cycling" <% if(eventDetail.sport=="cycling") {%> selected <%}%>>Cycling</option>
                    <option value="running" <% if(eventDetail.sport=="running") {%> selected <%}%>>Running</option>
                </select>
        </div>
    </div>
</div>
    <div class="row">
        <div class="col s12">
            <button class="waves-effect waves-light btn blue-grey darken-3">Next</button>
            </form>
        </div>
    </div>
<script src="/js/sign.js" crossorigin="anonymous"></script>
<%- include('../component/footer'); %>