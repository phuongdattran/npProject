<%- include('../component/navbar'); %>
<%- include('../component/pagetitle'); %>

<main class="valign-wrapper" id="titleMain">
    <div class="container">
    <div class="row">
        <div class="col s12 m6 offset-m3 l4 offset-l4">
            <form action="/newevent2" method="POST">
                <label for="title">Title</label>
                <input type="text" name="title" class="validate" required>
                <label for="type">Type</label>
                <input type="text" name="type" class="validate" required>
                <label for="description">Description</label>
                <input type="text" name="description" class="validate">
                <p><label for="sport">Sport</label></p>
                <select name="sport" required>
                    <option value="" disabled selected></option>
                    <option value="cycling">Cycling</option>
                    <option value="running">Running</option>
                </select>
                <input type="hidden" name="author" value="<%= userInfo._id %>">
        </div>
    </div>
</div>
    <div class="row">
        <div class="col s12">
            <button class="waves-effect waves-light btn blue-grey darken-3">Next</button>
            </form>
        </div>
    </div>
