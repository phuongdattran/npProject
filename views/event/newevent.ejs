<%- include('../component/head'); %>
<%- include('../component/navbar'); %>
<%- include('../component/pagetitle'); %>

<main class="valign-wrapper" id="titleMain">
    <div class="container">
    <div class="row">
        <div class="col s12 m6 offset-m3 l4 offset-l4">
            <form action="/api/newevent/" method="POST" enctype="multipart/form-data">
                <label for="title">Title</label>
                <input type="text" name="title" class="validate" required>
                <label for="type">Type</label>
                <input type="text" name="type" class="validate" required>
                <label for="pace">Pace</label>
                <input type="text" name="pace" class="validate" required>
                <label for="pace">Distance</label>
                <input type="text" name="distance" class="validate" required>
                <label for="date">Date</label>
                <input type="text" name="meeting.date" class="datepicker validate eventDatePicker" required>
                <label for="date">Time</label>
                <input type="text" name="meeting.time" class="timepicker validate" required>
                <label for="place">Place</label>
                <input type="text" name="meeting.place" class="validate" required>
                <label for="description">Description</label>
                <input type="text" name="description" class="validate">
                <input type="hidden" name="author" value="<%= userInfo._id %>" required>
                <p><label for="sport">Sport</label></p>
                <select name="sport" required>
                    <option value="" disabled selected></option>
                    <option value="cycling">Cycling</option>
                    <option value="running">Running</option>
                </select>
                <div class="file-field input-field">
                    <div class="btn blue-grey darken-3">
                      <span>GPS</span>
                      <input type="file" name="gps">
                    </div>
                    <div class="file-path-wrapper">
                      <input class="file-path validate" type="text">
                    </div>
                </div>
        </div>
    </div>
</div>
    <div class="row">
        <div class="col s12">
            <button class="waves-effect waves-light btn blue-grey darken-3">Create</button>
            </form>
        </div>
    </div>
<script src="/js/sign.js" crossorigin="anonymous"></script>
<%- include('../component/footer'); %>